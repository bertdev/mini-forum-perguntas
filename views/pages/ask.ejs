<%- include('./../partials/head') %>

  <body class="w-screen bg-indigo-50">
    <%- include('./../partials/navbar') %>

      <div class="container w-2/3 mx-auto mt-5">

        <div class="border-b-2 border-gray-300 py-2 mb-4">
          <h1 class="text-3xl">
            <%= pergunta.title %>
          </h1>
          <p class="text-base mt-2 text-gray-700">
            <%= pergunta.content %>
          </p>
        </div>

        <div>
          <h3 class="text-xl mb-2">
            Respostas:
          </h3>
          <% if (!respostas || respostas.length===0) {%>
            <h2 class="text-base mt-2 text-gray-500 my-3">
              Ainda não há respostas...
            </h2>
            <% } else { %>
              <% respostas.forEach(resposta=> { %>
                <div class="block border-2 border-gray-300 rounded px-8 py-4 bg-white mb-4">
                  <p class="text-base mt-2 text-gray-700">
                    <%= resposta.content %>
                  </p>
                </div>
                <% }) %>
                  <% } %>
        </div>

        <div class="flex justify-end">
          <a href="/answer/<%= pergunta.id %> "
            class="inline-block bg-blue-400 text-white px-7 py-2 rounded-md  hover:bg-blue-600 ml-2">Responder</a>
        </div>
      </div>
  </body>
  <%- include('./../partials/closehtml') %>
