<%- include('./../partials/head') %>

  <body class="w-screen bg-indigo-50">
    <%- include('./../partials/navbar') %>

      <div class="container w-2/3 mx-auto mt-5">

        <div class="flex justify-between items-center border-b-2 border-gray-300 py-2 mb-4">
          <h1 class="text-3xl">Perguntas</h1>
          <a href="/ask" class="inline-block bg-blue-400 text-white px-7 py-2 rounded-md  hover:bg-blue-600">
            Fazer uma pergunta
          </a>
        </div>


        <% perguntas.forEach(pergunta=> { %>

          <div class="block border-2 border-gray-300 rounded px-8 py-4 bg-white mb-4">
            <div class="mb-4">
              <h3 class="text-2xl">
                <%= pergunta.title %>
              </h3>
              <hr>
              <p class="text-base mt-2 text-gray-700">
                <%= pergunta.content %>
              </p>
            </div>
            <div class="flex justify-end items-center">
              <a href="/answer/<%= pergunta.id %> "
                class="inline-block bg-blue-400 text-white px-7 py-2 rounded-md  hover:bg-blue-600">Responder</a>
              <a href="/ask/<%= pergunta.id %> "
                class="inline-block bg-blue-400 text-white px-7 py-2 rounded-md  hover:bg-blue-600 ml-2">Ver
                respostas</a>
            </div>
          </div>

          <% }) %>
      </div>
  </body>
  <%- include('./../partials/closehtml') %>
